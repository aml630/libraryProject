<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Library</title>
  </head>
  <body>
    <h1>Library</h1>

<form action = "/" method = "post">
  <input name = "authorName"></input>
  <button>Submit Author</button>
</form>

<ul>
@foreach (var author in Model) {
  <li><a href="/authorbooks/@author.GetId()">@author.GetAuthor_name()</a></li>
  <form action ='/author/delete/@author.GetId()' method = "post">
  <input type="hidden" name="_method" value="DELETE">
  <button>Delete</button>
  </form>
}
</ul>

<form action = "/bookList" method = "post">
  <input name = "Search"></input>
  <button>Search Book Titles</button>
</form>
</br>
<form action = "/addPatron" method = "post">
  <input name = "patronName" placeholder = "Your Name Here"></input>
  <button>Get Library Card</button>
</form>





  </body>
</html>
